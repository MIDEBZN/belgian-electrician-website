---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "BE-ELEC - Votre électricien de confiance à Bruxelles. Dépannage, installation et mise en conformité électrique." } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="fr" class="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <title>{title} | BE-ELEC Bruxelles</title>
  </head>
  <body class="font-display bg-bg-dark text-slate-100 antialiased overflow-x-hidden">
    <!-- Floating buttons -->
    <a href="https://wa.me/32470000000" target="_blank" class="fixed bottom-24 right-6 z-[60] flex items-center gap-3 group">
      <span class="bg-white text-navy text-xs font-bold py-2 px-4 rounded-full shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 hidden md:block border border-gray-100">Des questions? Contactez-nous</span>
      <div class="bg-[#25D366] text-white w-14 h-14 rounded-full flex items-center justify-center shadow-lg hover:scale-110 transition-transform duration-300 cursor-pointer border-2 border-white">
        <svg fill="currentColor" height="30" viewBox="0 0 24 24" width="30"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/></svg>
      </div>
    </a>
    <a href="tel:+32470000000" class="fixed bottom-6 right-6 z-[60] flex items-center gap-3 group">
      <span class="bg-white text-navy text-xs font-bold py-2 px-4 rounded-full shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 hidden md:block">Besoin d'aide ?</span>
      <div class="bg-accent-blue text-white w-14 h-14 rounded-full flex items-center justify-center shadow-lg hover:scale-110 transition-transform duration-300 cursor-pointer">
        <span class="material-icons text-2xl">call</span>
      </div>
    </a>

    <!-- Urgency banner -->
    <div class="sticky top-0 z-50 bg-primary text-navy font-bold py-3 shadow-lg flex justify-center items-center gap-2 animate-pulse">
      <span class="material-icons text-xl">bolt</span>
      <span>URGENCE 24/7 : +32 470 00 00 00</span>
      <span class="material-icons text-xl">bolt</span>
    </div>

    <!-- Navigation -->
    <nav class="bg-navy border-b border-white/10 relative z-40">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-20">
          <div class="flex items-center">
            <a href="/" class="flex items-center gap-2">
              <div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
                <span class="material-icons text-navy text-2xl">electric_bolt</span>
              </div>
              <span class="font-bold text-xl text-white tracking-tight">BE-ELEC</span>
            </a>
          </div>
          <div class="hidden md:flex items-center space-x-8">
            <a href="/" class:list={[currentPath === '/' ? 'text-primary font-medium' : 'text-gray-300 hover:text-primary', 'transition-colors']}>Accueil</a>
            <a href="/services" class:list={[currentPath.startsWith('/services') ? 'text-primary font-medium' : 'text-gray-300 hover:text-primary', 'transition-colors']}>Services</a>
            <a href="/zones" class:list={[currentPath.startsWith('/zones') ? 'text-primary font-medium' : 'text-gray-300 hover:text-primary', 'transition-colors']}>Zones</a>
            <a href="/a-propos" class:list={[currentPath.startsWith('/a-propos') ? 'text-primary font-medium' : 'text-gray-300 hover:text-primary', 'transition-colors']}>À propos</a>
            <a href="/contact" class="bg-primary hover:bg-primary-hover text-navy px-5 py-2.5 rounded-lg font-bold transition-all shadow-md hover:shadow-lg">Devis Gratuit</a>
          </div>
          <!-- Mobile menu button -->
          <div class="md:hidden flex items-center">
            <button id="mobile-menu-btn" class="text-white" aria-label="Menu">
              <span class="material-icons text-3xl">menu</span>
            </button>
          </div>
        </div>
      </div>
      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden md:hidden bg-navy border-t border-white/10 px-4 pb-4">
        <a href="/" class="block py-3 text-gray-300 hover:text-primary">Accueil</a>
        <a href="/services" class="block py-3 text-gray-300 hover:text-primary">Services</a>
        <a href="/zones" class="block py-3 text-gray-300 hover:text-primary">Zones</a>
        <a href="/a-propos" class="block py-3 text-gray-300 hover:text-primary">À propos</a>
        <a href="/contact" class="block py-3 mt-2 bg-primary text-navy text-center font-bold rounded-lg">Devis Gratuit</a>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-navy border-t border-white/10 pt-16 pb-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
          <div>
            <div class="flex items-center gap-2 mb-6">
              <div class="w-8 h-8 bg-primary rounded flex items-center justify-center">
                <span class="material-icons text-navy text-lg">electric_bolt</span>
              </div>
              <span class="font-bold text-xl text-white tracking-tight">BE-ELEC</span>
            </div>
            <p class="text-gray-400 text-sm mb-6">Votre partenaire de confiance pour tous travaux d'électricité à Bruxelles. Service rapide, agréé et garanti.</p>
          </div>
          <div>
            <h4 class="text-white font-bold mb-6">Liens Rapides</h4>
            <ul class="space-y-3 text-sm text-gray-400">
              <li><a class="hover:text-primary transition-colors" href="/">Accueil</a></li>
              <li><a class="hover:text-primary transition-colors" href="/services">Nos Services</a></li>
              <li><a class="hover:text-primary transition-colors" href="/zones">Zones d'Intervention</a></li>
              <li><a class="hover:text-primary transition-colors" href="/a-propos">À propos</a></li>
              <li><a class="hover:text-primary transition-colors" href="/contact">Contact</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-white font-bold mb-6">Services</h4>
            <ul class="space-y-3 text-sm text-gray-400">
              <li><a class="hover:text-primary transition-colors" href="/services">Dépannage Urgence</a></li>
              <li><a class="hover:text-primary transition-colors" href="/services">Mise en Conformité</a></li>
              <li><a class="hover:text-primary transition-colors" href="/services">Domotique</a></li>
              <li><a class="hover:text-primary transition-colors" href="/services">Bornes de Recharge</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-white font-bold mb-6">Urgence 24/7</h4>
            <p class="text-gray-400 text-sm mb-4">Une panne ? Nous intervenons dans l'heure.</p>
            <a href="tel:+32470000000" class="block w-full text-center bg-primary hover:bg-primary-hover text-navy font-bold py-3 rounded-lg transition-colors">
              Appeler maintenant
            </a>
          </div>
        </div>
        <div class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
          <p>&copy; {new Date().getFullYear()} BE-ELEC Bruxelles. Tous droits réservés.</p>
          <div class="flex gap-6 mt-4 md:mt-0">
            <a class="hover:text-white transition-colors" href="#">Mentions Légales</a>
            <a class="hover:text-white transition-colors" href="#">Politique de Confidentialité</a>
          </div>
        </div>
      </div>
    </footer>

    <script>
      const btn = document.getElementById('mobile-menu-btn');
      const menu = document.getElementById('mobile-menu');
      if (btn && menu) {
        btn.addEventListener('click', () => menu.classList.toggle('hidden'));
      }
    </script>
  </body>
</html>

---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Électricien à Bruxelles - Dépannage urgence 24/7, installation et mise en conformité." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	</head>
	<body>
        <!-- Top Bar -->
        <div style="background-color: var(--color-primary); color: var(--color-navy); font-weight: 700; padding: 0.75rem; text-align: center; display: flex; justify-content: center; align-items: center; gap: 0.5rem; animation: pulse 2s infinite;">
            <span class="material-icons" style="font-size: 1.25rem;">bolt</span>
            <span>URGENCE 24/7 : +32 2 555 01 23</span>
            <span class="material-icons" style="font-size: 1.25rem;">bolt</span>
        </div>

        <!-- Navigation -->
		<nav style="background-color: var(--color-navy); border-bottom: 1px solid rgba(255,255,255,0.1); position: sticky; top: 0; z-index: 50;">
            <div class="container">
                <div style="display: flex; justify-content: space-between; height: 5rem; align-items: center;">
                    <!-- Logo -->
                    <a href="/" style="display: flex; align-items: center; gap: 0.5rem; text-decoration: none;">
                        <div style="width: 2.5rem; height: 2.5rem; background-color: var(--color-primary); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                            <span class="material-icons" style="color: var(--color-navy); font-size: 1.5rem;">electric_bolt</span>
                        </div>
                        <span style="font-weight: 700; font-size: 1.25rem; color: white;">BE-ELEC</span>
                    </a>

                    <!-- Desktop Menu -->
                    <div class="desktop-menu">
                        <a href="/" class="nav-link">Accueil</a>
                        <a href="/services" class="nav-link">Services</a>
                        <a href="/locations" class="nav-link">Locations</a>
                        <a href="/about" class="nav-link">About</a>
                        <a href="/contact" class="btn btn-primary" style="margin-left: 1rem;">Devis Gratuit</a>
                    </div>
                    <!-- Mobile items would go here -->
                </div>
            </div>
        </nav>

        <style>
            .nav-link {
                color: #d1d5db; /* gray-300 */
                font-weight: 500;
                text-decoration: none;
                margin-left: 2rem;
                transition: color 0.2s;
            }
            .nav-link:hover {
                color: var(--color-primary);
            }
            
            /* Responsive Navigation */
            .desktop-menu {
                display: none;
            }
            
            @media (min-width: 768px) {
                .desktop-menu { 
                    display: flex; 
                    align-items: center; 
                }
            }
            
            @keyframes pulse {
                0%, 100% { opacity: 1; }
                50% { opacity: .8; }
            }
        </style>

		<slot />

        <!-- Footer -->
        <footer style="background-color: var(--color-navy); border-top: 1px solid rgba(255,255,255,0.1); padding-top: 4rem; padding-bottom: 2rem;">
            <div class="container">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 3rem; margin-bottom: 3rem;">
                    <div>
                        <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 1.5rem;">
                            <div style="width: 2rem; height: 2rem; background-color: var(--color-primary); border-radius: 0.25rem; display: flex; align-items: center; justify-content: center;">
                                <span class="material-icons" style="color: var(--color-navy); font-size: 1.125rem;">electric_bolt</span>
                            </div>
                            <span style="font-weight: 700; font-size: 1.25rem; color: white;">BE-ELEC</span>
                        </div>
                        <p style="color: #9ca3af; font-size: 0.875rem; line-height: 1.5;">
                            Votre partenaire de confiance pour tous travaux d'électricité en Belgique. Service rapide, agréé et garanti.
                        </p>
                    </div>
                    <div>
                        <h4 style="color: white; font-weight: 700; margin-bottom: 1.5rem;">Liens Rapides</h4>
                        <ul style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 0.75rem;">
                            <li><a href="/" style="color: #9ca3af; text-decoration: none; font-size: 0.875rem;">Accueil</a></li>
                            <li><a href="/services" style="color: #9ca3af; text-decoration: none; font-size: 0.875rem;">Nos Services</a></li>
                            <li><a href="/locations" style="color: #9ca3af; text-decoration: none; font-size: 0.875rem;">Zones d'Intervention</a></li>
                            <li><a href="/contact" style="color: #9ca3af; text-decoration: none; font-size: 0.875rem;">Contact</a></li>
                        </ul>
                    </div>
                    <div>
                        <h4 style="color: white; font-weight: 700; margin-bottom: 1.5rem;">Contact</h4>
                        <p style="color: #9ca3af; font-size: 0.875rem; margin-bottom: 0.5rem;">Avenue de l'Électricité 12<br>1000 Bruxelles</p>
                        <a href="tel:+3225550123" style="display: block; width: 100%; text-align: center; background-color: var(--color-primary); color: var(--color-navy); font-weight: 700; padding: 0.75rem; border-radius: 0.5rem; text-decoration: none; margin-top: 1rem;">
                            Appeler le Dispatcheur
                        </a>
                    </div>
                </div>
                <div style="border-top: 1px solid rgba(255,255,255,0.1); padding-top: 2rem; text-align: center; color: #6b7280; font-size: 0.875rem;">
                    <p>© 2026 BE-ELEC Belgique. Tous droits réservés.</p>
                </div>
            </div>
        </footer>
	</body>
</html>

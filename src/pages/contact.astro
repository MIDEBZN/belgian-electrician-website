---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contactez-nous | BE-ELEC">
	<main style="padding-top: 4rem; padding-bottom: 6rem;">
        <div class="container">
            <div style="background-color: var(--color-navy); border-radius: 1rem; overflow: hidden; display: flex; flex-direction: column; md:flex-row; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);">
                
                <!-- Contact Info Side -->
                <div style="padding: 2.5rem; background-color: var(--color-navy-light); flex: 1; color: white;">
                    <h3 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem;">Contactez-nous</h3>
                    <p style="color: #d1d5db; margin-bottom: 2rem; font-size: 0.875rem; line-height: 1.6;">
                         Besoin d'un devis ou d'une intervention non-urgente ? Remplissez le formulaire et nous vous recontacterons sous 24h.
                    </p>
                    
                    <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                         <div style="display: flex; gap: 1rem; align-items: center;">
                            <div style="width: 2.5rem; height: 2.5rem; background-color: rgba(253, 186, 18, 0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: var(--color-primary);">
                                <span class="material-icons">phone</span>
                            </div>
                            <div>
                                <div style="font-size: 0.75rem; text-transform: uppercase; color: #9ca3af;">Téléphone</div>
                                <div style="font-weight: 700;">+32 2 555 01 23</div>
                            </div>
                        </div>
                        
                        <div style="display: flex; gap: 1rem; align-items: center;">
                            <div style="width: 2.5rem; height: 2.5rem; background-color: rgba(253, 186, 18, 0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: var(--color-primary);">
                                <span class="material-icons">email</span>
                            </div>
                            <div>
                                <div style="font-size: 0.75rem; text-transform: uppercase; color: #9ca3af;">Email</div>
                                <div style="font-weight: 700;">contact@be-elec.be</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form Side -->
                <div style="padding: 2.5rem; background-color: white; flex: 1.5;">
                    <form style="display: grid; gap: 1.5rem;">
                        <div style="display: grid; grid-template-columns: 1fr; md:grid-template-columns: 1fr 1fr; gap: 1.5rem;">
                            <div>
                                <label for="name" style="display: block; font-size: 0.875rem; font-weight: 500; color: #374151; margin-bottom: 0.25rem;">Nom complet</label>
                                <input type="text" id="name" placeholder="Jean Dupont" style="width: 100%; border-radius: 0.5rem; border: 1px solid #d1d5db; padding: 0.5rem; background-color: #f9fafb;">
                            </div>
                            <div>
                                <label for="phone" style="display: block; font-size: 0.875rem; font-weight: 500; color: #374151; margin-bottom: 0.25rem;">Téléphone</label>
                                <input type="tel" id="phone" placeholder="+32 4XX XX XX XX" style="width: 100%; border-radius: 0.5rem; border: 1px solid #d1d5db; padding: 0.5rem; background-color: #f9fafb;">
                            </div>
                        </div>
                        
                        <div>
                             <label for="service" style="display: block; font-size: 0.875rem; font-weight: 500; color: #374151; margin-bottom: 0.25rem;">Type de Service</label>
                             <select id="service" style="width: 100%; border-radius: 0.5rem; border: 1px solid #d1d5db; padding: 0.5rem; background-color: #f9fafb;">
                                <option>Dépannage Électrique</option>
                                <option>Nouvelle Installation</option>
                                <option>Mise en Conformité</option>
                                <option>Bornes de Recharge</option>
                                <option>Autre demande</option>
                             </select>
                        </div>
                        
                        <div>
                             <label for="message" style="display: block; font-size: 0.875rem; font-weight: 500; color: #374151; margin-bottom: 0.25rem;">Message</label>
                             <textarea id="message" rows="3" placeholder="Décrivez votre problème..." style="width: 100%; border-radius: 0.5rem; border: 1px solid #d1d5db; padding: 0.5rem; background-color: #f9fafb;"></textarea>
                        </div>
                        
                        <button type="button" class="btn btn-primary" style="width: 100%;">Envoyer la demande</button>
                    </form>
                </div>

            </div>
        </div>
    </main>
</Layout>

<style>
    /* Dark mode overrides for the white part of the form */
    html.dark form label {
        color: #d1d5db;
    }
